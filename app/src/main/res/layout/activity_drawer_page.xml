<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrawerPage"
    android:id="@+id/drawer_layout"
    android:background="@drawable/background_1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/navigation_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/loginbannerdrawerpage"
                android:layout_width="wrap_content"
                android:layout_height="70sp"
                android:src="@drawable/transwift"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="330sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="Thank you for reaching this far, we are happy to have you"
                android:textColor="@color/orange"
                android:fontFamily="@font/rainshow"
                android:lineSpacingMultiplier="1.2"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal">
            </TextView>
            <TextView
                android:layout_width="330sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="We offer booking services"
                android:textColor="@color/orange"
                android:fontFamily="@font/rainshow"
                android:lineSpacingMultiplier="1.2"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal">
            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="300sp"
                android:src="@mipmap/booking"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="330sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="You will also know the specific route and duration the matatu will take with our up to date map services"
                android:textColor="@color/orange"
                android:fontFamily="@font/rainshow"
                android:lineSpacingMultiplier="1.2"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="300sp"
                android:src="@mipmap/maps"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="330sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="We also have a direct hotline that runs 24/7, see something?! Tell us"
                android:textColor="@color/orange"
                android:fontFamily="@font/rainshow"
                android:lineSpacingMultiplier="1.2"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="300sp"
                android:src="@mipmap/customercare"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigationView"
        app:headerLayout="@layout/header_menu"
        app:menu="@menu/drawer_menu"
        android:fitsSystemWindows="true"
        android:layout_gravity="start">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>