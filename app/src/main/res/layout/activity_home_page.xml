<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage"
    android:orientation="vertical"
    android:background="@drawable/background_1"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <ImageView
                    android:id="@+id/loginbannerhomepage"
                    android:layout_width="wrap_content"
                    android:layout_height="70sp"
                    android:src="@drawable/transwift"
                    android:layout_gravity="center_horizontal"
                    />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:layout_width="150sp"
                    android:layout_height="60sp"
                    android:id="@+id/homeloginbutton"
                    android:text="LOGIN"
                    android:layout_marginLeft="15sp"
                    android:fontFamily="@font/golden_volcano"
                    android:textSize="20sp"
                    android:background="@drawable/custom_button1"
                    android:layout_gravity="left"
                    android:layout_marginTop="60sp"
                    android:textStyle="normal">
                </Button>

                <Button
                    android:id="@+id/homeregisterbutton"
                    android:layout_width="150sp"
                    android:layout_height="60sp"
                    android:layout_gravity="right"
                    android:layout_marginTop="60sp"
                    android:background="@drawable/custom_button1"
                    android:layout_marginLeft="30sp"
                    android:layout_marginRight="15sp"
                    android:fontFamily="@font/golden_volcano"
                    android:text="REGISTER"
                    android:textSize="20sp"
                    android:textStyle="normal"/>
            </LinearLayout>

                <TextView
                    android:layout_width="330sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:text="Welcome to Transwift, if this is your first time here then we're happy to have you, read through to  know who we are"
                    android:textColor="@color/orange"
                    android:fontFamily="@font/rainshow"
                    android:lineSpacingMultiplier="1.2"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal">
                </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="300sp"
                android:src="@mipmap/meetinglaughter"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_gravity="center_horizontal"
                />

                <TextView
                    android:layout_width="330sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="So what is Transwift?! Transwift is an app that'll allow you to have the matatu owner near you whenever you're travelling"
                    android:fontFamily="@font/rainshow"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/orange"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="300sp"
                android:src="@mipmap/phone_coffee"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="330sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Our team works hard to make sure that you get the quality of service you deserve in a matatu"
                android:textColor="@color/orange"
                android:fontFamily="@font/rainshow"
                android:lineSpacingMultiplier="1.2"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="300sp"
                android:src="@mipmap/meeting"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_gravity="center_horizontal"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>