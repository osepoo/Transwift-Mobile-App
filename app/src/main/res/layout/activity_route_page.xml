<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RoutePage"
    android:orientation="vertical"
    android:background="@drawable/background_1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/routepageimageview"
                android:layout_width="wrap_content"
                android:layout_height="70sp"
                android:src="@drawable/transwift"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="330sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="Input the route number or the matatu number plate or your email address and we'll show you your route"
                android:textColor="@color/orange"
                android:fontFamily="@font/rainshow"
                android:lineSpacingMultiplier="1.2"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Your route goes here"
                android:textColorHint="@color/orange"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="50sp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:textColor="@color/orange"
                    android:textSize="30sp"
                    android:autofillHints=""
                    android:id="@+id/routename">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/routebutton"
                android:layout_width="150sp"
                android:layout_height="60sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60sp"
                android:background="@drawable/custom_button1"
                android:text="CHECK"
                android:fontFamily="@font/golden_volcano"
                android:textSize="20sp"
                android:textStyle="normal"/>



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="600sp"
                android:src="@drawable/transwift"
                android:layout_marginTop="30sp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>