<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotlinePage"
    android:orientation="vertical"
    android:background="@drawable/background_1">

    <ImageView
        android:id="@+id/loginbannerhotlinepage"
        android:layout_width="wrap_content"
        android:layout_height="70sp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/transwift"
        tools:ignore="ImageContrastCheck"
        android:contentDescription="TODO" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="330sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="@string/thank_you_again_for_choosing_us_feel_free_to_communicate_directly_with_us_over_our_24_7_hotline_just_dial_010444478_and_someone_will_be_with_you_in_a_short_while"
                android:textColor="@color/orange"
                android:fontFamily="@font/rainshow"
                android:lineSpacingMultiplier="1.2"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="300sp"
                android:src="@mipmap/hotlinee"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>