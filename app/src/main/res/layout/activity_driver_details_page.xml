<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverDetailsPage"
    android:orientation="vertical"
    android:background="@drawable/background_1"
    >

    <ImageView
        android:id="@+id/loginbannerdriverpage"
        android:layout_width="wrap_content"
        android:layout_height="70sp"
        android:src="@drawable/transwift"
        android:layout_gravity="center_horizontal"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Enter number plate here"
                android:textColorHint="@color/orange"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="100sp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:inputType="text"
                    android:ems="10"
                    android:fontFamily="@font/rainshow"
                    android:textColor="@color/orange"
                    android:textSize="25sp"
                    android:autofillHints=""
                    android:id="@+id/driverdetailset1">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:layout_width="150sp"
                android:layout_height="60sp"
                android:id="@+id/driverdetailsbt1"
                android:text="SHOW ME"
                android:fontFamily="@font/golden_volcano"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:background="@drawable/custom_button1"
                android:layout_marginTop="60sp"
                android:textStyle="normal">
            </Button>


            <TextView
                android:layout_width="330sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="This is your driver"
                android:textColor="@color/orange"
                android:fontFamily="@font/rainshow"
                android:lineSpacingMultiplier="1.2"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="300sp"
                android:src="@drawable/transwift"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_gravity="center_horizontal"
                />

            <TextView
                android:layout_width="330sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="This is your conductor"
                android:textColor="@color/orange"
                android:fontFamily="@font/rainshow"
                android:lineSpacingMultiplier="1.2"
                android:textSize="25sp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="300sp"
                android:src="@drawable/transwift"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_gravity="center_horizontal"
                />


        </LinearLayout>
    </ScrollView>
</LinearLayout>